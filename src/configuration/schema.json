{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/$defs/entry",
  "type": "object",
  "required": [ "url", "port" ],
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "action": {
      "type": "object",
      "required": [ "title", "url", "icon" ],
      "properties": {
        "title": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "head": {
      "type": "string"
    },
    "hero": {
      "type": "string"
    },
    "port": {
      "type": "integer",
      "minimum": 0
    },
    "url": {
      "type": "string"
    }
  },
  "$defs": {
    "collection": {
      "$ref": "#/$defs/entry",
      "required": [ "path" ],
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "defaultDialect": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "github": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "resolve": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "website": {
          "type": "string"
        }
      }
    },
    "entry": {
      "type": "object",
      "properties": {
        "extends": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "contents": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "anyOf": [
              {
                "$ref": "#/$defs/include"
              },
              {
                "$ref": "#/$defs/collection"
              },
              {
                "$ref": "#/$defs/page"
              }
            ]
          }
        }
      }
    },
    "include": {
      "type": "object",
      "required": [ "include" ],
      "properties": {
        "include": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "page": {
      "$ref": "#/$defs/entry",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "github": {
          "type": "string"
        },
        "website": {
          "type": "string"
        }
      }
    }
  }
}
