{
  "target": "urn:sourcemeta:registry/configuration.json",
  "tests": [
    {
      "description": "minimal collection",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "url with port",
      "valid": true,
      "data": {
        "url": "https://www.example.com:8000",
        "port": 8000,
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "top level metadata",
      "valid": true,
      "data": {
        "title": "Example",
        "description": "The example schema registry",
        "url": "https://www.example.com",
        "port": 8000,
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "overlapping page with full metadata",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "pages": {
          "example": {
            "title": "Example",
            "description": "An example collection of schemas",
            "email": "hello@example.com",
            "github": "example",
            "website": "https://www.example.com/schemas"
          }
        },
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "nested page/collections",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "pages": {
          "foo/bar/baz": {
            "title": "Example",
            "description": "An example collection of schemas",
            "email": "hello@example.com",
            "github": "example",
            "website": "https://www.example.com/schemas"
          }
        },
        "schemas": {
          "foo/bar/baz": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "analytics with plausible",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "analytics": {
          "plausible": "example.com"
        },
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "with default dialect",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas",
            "defaultDialect": "http://json-schema.org/draft-07/schema#"
          }
        }
      }
    },
    {
      "description": "action without icon",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "action": {
          "title": "Call to Action",
          "url": "https://www.sourcemeta.com"
        },
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "action with valid icon",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "action": {
          "title": "Call to Action",
          "url": "https://www.sourcemeta.com",
          "icon": "github"
        },
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "github with repository",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "pages": {
          "example": {
            "github": "example/foo"
          }
        },
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "basic HTML hero",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "hero": "<p>Hello</p>",
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas"
          }
        }
      }
    },
    {
      "description": "single rebase",
      "valid": true,
      "data": {
        "url": "https://www.example.com",
        "port": 8000,
        "hero": "<p>Hello</p>",
        "schemas": {
          "example": {
            "base": "https://schemas.example.com",
            "path": "./schemas",
            "rebase": [
              { "from": "https://example.com", "to": "/" }
            ]
          }
        }
      }
    }
  ]
}
