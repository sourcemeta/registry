{
  "url": "http://localhost:8000",
  "html": {
    "hero": "<p class=\"mb-0\">A sample schema registry sandbox for testing purposes</p>",
    "action": {
      "title": "Star on GitHub",
      "url": "https://github.com/sourcemeta/registry",
      "icon": "github"
    }
  },
  "extends": [
    "@geojson/v1.0.5",
    "@sourcemeta/registry",
    "@modelcontextprotocol/2025-06-18"
  ],
  "contents": {
    "example": {
      "title": "Sourcemeta",
      "description": "My description",
      "email": "hello@sourcemeta.com",
      "github": "sourcemeta",
      "website": "https://www.sourcemeta.com",
      "contents": {
        "extension": {
          "baseUri": "https://example.com/extension",
          "path": "./schemas/example/extension"
        },
        "schemas": {
          "baseUri": "https://example.com/schemas",
          "path": "./schemas/example/folder",
          "defaultDialect": "http://json-schema.org/draft-07/schema#",
          "resolve": {
            "https://other.com/single.json": "/example/bundling/single.json"
          }
        },
        "camelcase": {
          "contents": {
            "test": {
              "baseUri": "https://sourcemeta.com/camelcase",
              "path": "./schemas/example/camelcase"
            }
          }
        },
        "v2.0": {
          "baseUri": "https://example.com/schemas",
          "path": "./schemas/example/v2.0"
        },
        "bundling": {
          "baseUri": "https://example.com/bundling",
          "path": "./schemas/example/bundling"
        }
      }
    },
    "doc": {
      "title": "A sample schema folder",
      "description": "For testing purposes",
      "github": "sourcemeta/registry",
      "baseUri": "https://example.com/doc",
      "path": "./schemas/doc"
    },
    "hyper": {
      "baseUri": "https://example.com/hyper",
      "path": "./schemas/hyper"
    },
    "same": {
      "baseUri": "http://localhost:8000/same",
      "path": "./schemas/same"
    },
    "no-blaze": {
      "baseUri": "https://other.com",
      "path": "./schemas/no-blaze",
      "x-sourcemeta-registry:evaluate": false
    }
  }
}
