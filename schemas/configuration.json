{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:sourcemeta:registry/configuration.json",
  "type": "object",
  "required": [ "url", "port", "schemas" ],
  "properties": {
    "title": {
      "default": "Sourcemeta",
      "$ref": "#/definitions/text"
    },
    "description": {
      "default": "The next-generation JSON Schema Registry",
      "$ref": "#/definitions/text"
    },
    "action": {
      "type": "object",
      "required": [ "title", "url" ],
      "properties": {
        "title": {
          "$ref": "#/definitions/text"
        },
        "icon": {
          "enum": [ "github", "link" ]
        },
        "url": {
          "$ref": "#/definitions/http-url"
        }
      },
      "additionalProperties": false
    },
    "head": {
      "type": "string"
    },
    "hero": {
      "type": "string"
    },
    "pages": {
      "type": "object",
      "minProperties": 1,
      "propertyNames": {
        "$ref": "#/definitions/entry-path"
      },
      "additionalProperties": {
        "type": "object",
        "minProperties": 1,
        "properties": {
          "title": {
            "$ref": "#/definitions/text"
          },
          "description": {
            "$ref": "#/definitions/text"
          },
          "email": {
            "type": "string",
            "pattern": "^[a-z0-9._+-]+@[a-z0-9.-]+\\.[a-z]{2,}$",
            "format": "email"
          },
          "github": {
            "type": "string",
            "pattern": "^[a-z0-9-]+(/[a-z0-9-]+)?$"
          },
          "website": {
            "$ref": "#/definitions/http-url"
          }
        },
        "additionalProperties": false
      }
    },
    "port": {
      "type": "integer",
      "minimum": 0
    },
    "schemas": {
      "type": "object",
      "minProperties": 1,
      "propertyNames": {
        "$ref": "#/definitions/entry-path"
      },
      "additionalProperties": {
        "type": "object",
        "required": [ "base", "path" ],
        "properties": {
          "base": {
            "$ref": "#/definitions/uri"
          },
          "defaultDialect": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "pattern": "^\\S.*\\S$",
            "minLength": 1
          },
          "rebase": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "object",
              "required": [ "from", "to" ],
              "properties": {
                "from": {
                  "$ref": "#/definitions/uri"
                },
                "to": {
                  "$ref": "#/definitions/uri"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "url": {
      "$ref": "#/definitions/http-url"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "entry-path": {
      "pattern": "^[a-z0-9][a-z0-9-/.]*$"
    },
    "http-url": {
      "type": "string",
      "pattern": "^https?:\\/\\/[a-z0-9-.:/]+$",
      "format": "url"
    },
    "text": {
      "type": "string",
      "pattern": "^\\S.*\\S$",
      "minLength": 1
    },
    "uri": {
      "type": "string",
      "pattern": "^\\S.*\\S?$",
      "format": "uri",
      "minLength": 1
    }
  }
}
