{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [ "static", "dynamic" ],
  "properties": {
    "dynamic": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/entry"
      }
    },
    "static": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/entry"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "entry": {
      "type": "object",
      "required": [
        "parent",
        "type",
        "root",
        "base",
        "pointer",
        "relativePointer",
        "dialect",
        "baseDialect"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "base": {
          "type": "string"
        },
        "baseDialect": {
          "type": "string"
        },
        "dialect": {
          "type": "string"
        },
        "parent": {
          "type": [ "string", "null" ]
        },
        "pointer": {
          "type": "string"
        },
        "relativePointer": {
          "type": "string"
        },
        "root": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
