{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [ "valid", "steps" ],
  "properties": {
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "annotation",
          "evaluatePath",
          "instanceLocation",
          "instancePositions",
          "message",
          "keywordLocation",
          "name",
          "type",
          "vocabulary"
        ],
        "properties": {
          "type": {
            "enum": [ "push", "pass", "fail" ]
          },
          "annotation": true,
          "evaluatePath": {
            "$ref": "../../../common/jsonpointer.json"
          },
          "instanceLocation": {
            "$ref": "../../../common/jsonpointer.json"
          },
          "instancePositions": {
            "type": "array",
            "maxItems": 4,
            "minItems": 4,
            "items": {
              "type": "integer",
              "minimum": 1
            }
          },
          "keywordLocation": {
            "$ref": "../../../common/url.json"
          },
          "message": {
            "type": [ "string", "null" ]
          },
          "name": {
            "type": "string"
          },
          "vocabulary": {
            "anyOf": [
              {
                "type": "null"
              },
              {
                "$ref": "../../../common/uri.json"
              }
            ]
          }
        },
        "additionalProperties": false
      }
    },
    "valid": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
