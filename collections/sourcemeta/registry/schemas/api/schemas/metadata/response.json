{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#base",
  "required": [ "breadcrumb" ],
  "properties": {
    "breadcrumb": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "name", "path" ],
        "properties": {
          "name": {
            "type": "string"
          },
          "path": {
            "$ref": "../../../common/uri-relative.json"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "unevaluatedProperties": false,
  "$defs": {
    "base": {
      "$anchor": "base",
      "type": "object",
      "required": [
        "bytes",
        "identifier",
        "path",
        "baseDialect",
        "dialect",
        "health"
      ],
      "properties": {
        "baseDialect": {
          "enum": [ "draft4", "draft6", "draft7", "2019-09", "2020-12" ]
        },
        "bytes": {
          "$ref": "../../../common/bytes.json"
        },
        "dialect": {
          "$ref": "../../../common/uri.json"
        },
        "health": {
          "$ref": "../../../common/percentage.json"
        },
        "identifier": {
          "$ref": "../../../common/url.json"
        },
        "path": {
          "$ref": "../../../common/uri-relative.json"
        }
      }
    }
  }
}
