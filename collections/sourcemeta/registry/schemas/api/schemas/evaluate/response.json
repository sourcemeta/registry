{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "anyOf": [
    {
      "type": "object",
      "required": [ "valid" ],
      "properties": {
        "annotations": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "absoluteKeywordLocation",
              "annotation",
              "instanceLocation",
              "keywordLocation"
            ],
            "properties": {
              "absoluteKeywordLocation": {
                "$ref": "../../../common/url.json"
              },
              "annotation": {
                "type": "array",
                "minItems": 1
              },
              "instanceLocation": {
                "$ref": "../../../common/jsonpointer.json"
              },
              "keywordLocation": {
                "$ref": "../../../common/jsonpointer.json"
              }
            },
            "additionalProperties": false
          }
        },
        "valid": {
          "const": true
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": [ "valid", "errors" ],
      "properties": {
        "errors": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "absoluteKeywordLocation",
              "error",
              "instanceLocation",
              "keywordLocation"
            ],
            "properties": {
              "absoluteKeywordLocation": {
                "$ref": "../../../common/url.json"
              },
              "error": {
                "type": "string"
              },
              "instanceLocation": {
                "$ref": "../../../common/jsonpointer.json"
              },
              "keywordLocation": {
                "$ref": "../../../common/jsonpointer.json"
              }
            },
            "additionalProperties": false
          }
        },
        "valid": {
          "const": false
        }
      },
      "additionalProperties": false
    }
  ]
}
