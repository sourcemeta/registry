{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [ "static", "dynamic" ],
  "properties": {
    "dynamic": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/entry"
      }
    },
    "static": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/entry"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "entry": {
      "type": "object",
      "required": [
        "parent",
        "type",
        "root",
        "base",
        "pointer",
        "relativePointer",
        "dialect",
        "baseDialect"
      ],
      "properties": {
        "type": {
          "enum": [ "resource", "anchor", "pointer", "subschema" ]
        },
        "base": {
          "$ref": "../../../common/url.json"
        },
        "baseDialect": {
          "$ref": "../../../common/uri.json"
        },
        "dialect": {
          "$ref": "../../../common/url.json"
        },
        "parent": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "$ref": "../../../common/jsonpointer"
            }
          ]
        },
        "pointer": {
          "$ref": "../../../common/jsonpointer"
        },
        "relativePointer": {
          "$ref": "../../../common/jsonpointer"
        },
        "root": {
          "$ref": "../../../common/url.json"
        }
      },
      "additionalProperties": false
    }
  }
}
