{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [ "score", "errors" ],
  "properties": {
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "pointers", "name", "message", "description" ],
        "properties": {
          "description": {
            "type": [ "string", "null" ]
          },
          "message": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "pointers": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "json-pointer"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "score": {
      "$ref": "../../../common/percentage.json"
    }
  },
  "additionalProperties": false
}
