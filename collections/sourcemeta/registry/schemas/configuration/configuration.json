{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "The Sourcemeta Registry configuration file format",
  "$ref": "./entry.json",
  "type": "object",
  "required": [ "url" ],
  "properties": {
    "html": {
      "type": [ "object", "boolean" ],
      "properties": {
        "description": {
          "type": "string"
        },
        "action": {
          "type": "object",
          "required": [ "title", "url", "icon" ],
          "properties": {
            "title": {
              "type": "string"
            },
            "icon": {
              "type": "string"
            },
            "url": {
              "$ref": "./url.json"
            }
          }
        },
        "head": {
          "type": "string"
        },
        "hero": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "url": {
      "$ref": "./url.json"
    }
  }
}
