{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "The Sourcemeta Registry configuration file format",
  "description": "The configuration file format used to configured Registry instances",
  "type": "object",
  "required": [ "url" ],
  "properties": {
    "extends": {
      "$ref": "./extends.json"
    },
    "contents": {
      "$ref": "./contents.json",
      "properties": {
        "self": false
      }
    },
    "html": {
      "type": [ "object", "boolean" ],
      "properties": {
        "description": {
          "type": "string"
        },
        "action": {
          "type": "object",
          "required": [ "title", "url", "icon" ],
          "properties": {
            "title": {
              "type": "string"
            },
            "icon": {
              "type": "string"
            },
            "url": {
              "$ref": "../../../std/v0.0.1/schemas/url.json"
            }
          },
          "additionalProperties": false
        },
        "head": {
          "type": "string"
        },
        "hero": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "url": {
      "$ref": "../../../std/v0.0.1/schemas/url.json"
    }
  },
  "additionalProperties": false
}
