{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sourcemeta Registry Collection",
  "description": "Represents a set of schemas to be mounted into the Registry",
  "type": "object",
  "required": [ "path" ],
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "x-sourcemeta-registry:alert": {
      "type": "string"
    },
    "x-sourcemeta-registry:evaluate": {
      "type": "boolean"
    },
    "x-sourcemeta-registry:protected": {
      "type": "boolean"
    },
    "baseUri": {
      "$ref": "../common/uri-reference.json"
    },
    "defaultDialect": {
      "$ref": "../common/uri.json"
    },
    "email": {
      "$ref": "../common/email-address.json"
    },
    "github": {
      "type": "string"
    },
    "path": {
      "$ref": "../common/path-posix.json"
    },
    "resolve": {
      "type": "object",
      "propertyNames": {
        "$ref": "../common/uri-reference.json"
      },
      "additionalProperties": {
        "$ref": "../common/uri-reference.json"
      }
    },
    "website": {
      "$ref": "../common/url.json"
    }
  },
  "additionalProperties": false
}
